<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/image_1"
    tools:context=".AssistancePassFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assistance Pass Fragment"
            android:textAlignment="center"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grupo"
            android:textAlignment="center"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/assistanceGroup"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:entries="@array/grupos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/saveAssistanceBtn"
                android:text="Guardar"
                android:layout_weight="4"
                android:backgroundTint="#00FFD4"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:textColor="#1C0E26"
                app:cornerRadius="30dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/assistanceAllBtn"
                android:text="Asistencia/Falta todos"
                android:layout_marginLeft="50dp"
                android:layout_weight="2"
                android:backgroundTint="#00FFD4"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:textColor="#1C0E26"
                app:cornerRadius="30dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_weight="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alumno" />

            <TextView
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Asistió?" />

        </LinearLayout>

        <ListView
            android:id="@+id/assistanceList"
            android:layout_margin="10dp"
            tools:listitem="@layout/item_assistance"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>