<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/image_1"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Agregar Alumno"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Nombre(s)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/nameStudent"
        android:hint="Ingresa nombre del alumno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Apellido(s)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/lastnameStudent"
        android:hint="Ingresa apellidos del alumno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Grupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:entries="@array/grupos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/cancelStudentBtn"
            android:text="Cancelar"
            android:layout_weight="2"
            android:backgroundTint="#00FFD4"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textColor="#1C0E26"
            app:cornerRadius="30dp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/saveStudentBtn"
            android:text="Guardar"
            android:layout_marginLeft="50dp"
            android:layout_weight="2"
            android:backgroundTint="#00FFD4"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textColor="#1C0E26"
            app:cornerRadius="30dp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>